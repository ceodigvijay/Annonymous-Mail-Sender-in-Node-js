<% include partials/header.ejs %>
<div class="container">

  <div class="row">
    <div class="container">
      <form action="/send" method="POST">
        <div class="form-group">
          <div class="row">
            <div class="col">
              <input
                type="email"
                class="form-control"
                name="details[to]"
                placeholder="Recievers Email *"
                required
              />
            </div>
            <div class="col">
              <input
                type="email"
                class="form-control"
                name="details[cc]"
                placeholder="CC"
              />
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col">
              <input
                type="email"
                class="form-control"
                name="details[from]"
                placeholder="Senders Email"
              />
            </div>
            <div class="col">
              <input
                type="email"
                class="form-control"
                name="details[replyTo]"
                placeholder="Reply To email"
              />
            </div>
          </div>
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="details[subject]"
            placeholder="Subject *"
            required
          />
        </div>

        <div class="form-group">
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="5"
            name="details[html]"
            placeholder="Body of Email *"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
        <!-- <a href="/campgrounds">Go Back</a> -->
      </form>
    </div>
  </div>
</div>

